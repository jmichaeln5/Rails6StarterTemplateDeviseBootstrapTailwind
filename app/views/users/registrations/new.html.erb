<div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="wrapper fadeInDown m-auto">
    <div id="formContent">
      <div class="fadeIn first">
        <div class="container">
          <br>
          <p class="text-3xl"> Sign Up✍️ </p>
        </div>
      </div>

      <div class="field" name="login" placeholder="login" id="login">
        <%= f.email_field :email, autocomplete: 'Email', placeholder:' email', class:"fadeIn second widerTextField inputText" %>
      </div>

      <div class="field" name="login" placeholder="login" id="login">
        <%= f.text_field :username, autocomplete: 'username', placeholder:' username', class:"fadeIn third widerTextField inputText" %>
      </div>

      <br/>
      <div class="field -mt-2">
        <span class="text-gray-500">
          (6 Characters Minimum)
        </span>
        <br>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:'password', class:"field fadeIn fourth widerTextField inputText" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'password confirmation', class:"field fadeIn fourth widerTextField inputText" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <br/>
        <div class="field fadeIn fifth">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions fadeIn sixth">
        <%= f.submit "Sign Up", id:"formBtn", class:'cursor-pointer' %>
      </div>

      <div id="formFooter" class="fadeIn seventh">
        <%= render "users/shared/links" %>
      </div>

    </div>
  </div>
  <% end %>
</div>
