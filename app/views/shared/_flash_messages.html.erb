<% if flash[:notice]  || flash[:alert]  %>
<div id="msg-container">
  <% if flash[:notice] %>
    <div class="alert alert-success text-center p-4" id="notice-msg-container">
      <span class="notice text-green-700 text-2xl">
        <%= flash[:notice] %>
      </span>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger text-center p-4" id="alert-msg-container">
      <span class="alert text-red-700 text-2xl">
        <%= flash[:alert].class == String ? flash[:alert].humanize : flash[:alert].to_sentence %>
      </span>
    </div>
  <% end %>
</div>
<% end %>

<script type="text/javascript">

  function removeFadeOut( el, speed ) {
    var seconds = speed/800;
    el.style.transition = "opacity "+seconds+"s ease";

    el.style.opacity = 0;
    setTimeout(function() {
    el.parentNode.removeChild(el);
    }, speed);
  }

  if (document.body.contains(document.getElementById('msg-container')) ) {
    removeFadeOut(document.getElementById('msg-container'), 4500);
  }
</script>
